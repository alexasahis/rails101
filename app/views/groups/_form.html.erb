<%= form_for @group do |f| %>
  <div class="form-group">
    <% if @group.errors.any? %>
      <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li style="color: red"><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="form-group string optional">
      <%= f.label "標題", :class => "string optional control-label" %>
      <%= f.text_field :title, :class => "string optional form-control form-control" %>
    </div>
    <div class="form-group string optional">
      <%= f.label "敘述", :class => "string optional control-label" %>
      <%= f.text_area :description, :class => "string optional form-control" %>
    </div>
  </div>
  <%= f.submit "送出", class: "btn btn-primary", data: { disable_with: "送出中..." } %>
<% end %>
